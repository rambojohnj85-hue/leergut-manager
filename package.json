
{
  "name": "leergutmanager",
  "version": "1.3.0",
  "description": "Leergutmanager App f√ºr Europaletten, Gitterboxen und Pendelverpackungen",
  "author": "Dein Name",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run build:electron && concurrently \"vite\" \"electron .\"",
    "electron:build": "npm run build && npm run build:electron && electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "concurrently": "^9.0.1"
  },
  "build": {
    "appId": "com.leergut.manager",
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    }
  }
}
